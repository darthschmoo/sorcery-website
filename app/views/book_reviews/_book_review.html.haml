%div.book_review{ id: html_id(book_review) }
  %h2.book_title
    = link_to book_review_path( book_review ) do
      %em #{book_review.book_title}, 
      by #{book_review.book_author}
  
  - unless book_review.cover_image.blank?
    %div.cover_image 
      = image_tag( book_review.cover_image )

  %p.rating 
    %strong
      Rating:
    #{book_review.rating}
    
  %p.available
    %strong
      Available at: 
    #{link_to book_review.book_link.truncate(60), book_review.book_link}
  
  %h3.summary Summary
  = markdown book_review.summary
  
  %h3.review Review
  = markdown book_review.review
  
  - if logged_in?
    = link_to "Edit", edit_book_review_path( book_review )