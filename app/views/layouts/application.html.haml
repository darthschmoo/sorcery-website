<!DOCTYPE html>
<html>
  <head>
    <title>Sorcery</title>
    <%= stylesheet_link_tag    "application" %>
    <%= stylesheet_link_tag params[:controller] %>
    <%= stylesheet_link_tag Rails.env %>
    <% logged_in? do -%>
      <%= stylesheet_link_tag "logged_in" %>
    <% end -%>
    
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag params[:controller] %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <%= render :partial => "/layouts/application_header" %>
    <%= render :partial => "/layouts/application_sidebar" %>
  
    <div id="content">
      <div id="notices">
        <p class="error"><%= flash[:error] %></p>
        <p class="warning"><%= flash[:warning] %></p>
        <p class="notice"><%= flash[:notice] %></p>
      </div>
      
      <%= yield %>
    </div>
    
    <%= render :partial => "/layouts/application_footer" %>
  </body>
</html>
